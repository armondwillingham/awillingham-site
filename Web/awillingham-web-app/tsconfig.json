{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es5", "es6", "dom", "ES2020"],
        "jsx": "react",
        "noEmitOnError": false,
        "typeRoots": ["./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "baseUrl": "./src"
    },
    "include": [
        "src", "test"
    ],
    "exclude": [
        "node_modules"
    ]
}