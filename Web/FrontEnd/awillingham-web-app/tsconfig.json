{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./src",
      "typeRoots": ["./node_modules/@types"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop" : true
    },
    "include": [
      "./src/"
    ],
    "exclude": [
      "node_modules/*"
    ]
}